{
  "private": true,
  "name": "gemini-scrollbar-gh-page",
  "scripts": {
    "build": "tarima -fqe",
    "watch": "tarima -des",
    "start": "npm run watch"
  },
  "author": "Noel Delgado <auhcsei@gmail.com> (http://pixelia.me/)",
  "license": "MIT",
  "dependencies": {
    "gemini-scrollbar": "1.5.3",
    "sanitize.css": "^1.1.0"
  },
  "devDependencies": {
    "chokidar": "^1.7.0",
    "less": "^2.7.2",
    "rollup": "^0.45.2",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "tarima": "^3.7.0",
    "tarima-lr": "^0.3.2"
  },
  "tarima": {
    "bundle": [
      "src/js/app.js",
      "src/less/app.less"
    ],
    "rollupFile": "rollup.config.js",
    "public": "./",
    "src": "./src/**/*",
    "dest": "./build",
    "watch": "**.html",
    "rename": [
      "src/**:bundle.{extname}"
    ],
    "devPlugins": [
      "tarima-lr"
    ],
    "bundleOptions": {
      "extensions": {
        "js": "es6",
        "css": "less"
      }
    }
  }
}
